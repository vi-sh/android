<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dreams2"
    tools:context="test.example.com.verifiersvalidator.VerifierinfoActivity">

    <test.example.com.verifiersvalidator.TitanicTextView
        android:layout_width="wrap_content"
        android:fontFamily="serif"
        android:layout_height="wrap_content"
        android:text="Verifier Info"
        android:id="@+id/verifierinfolbl"
        android:background="@color/midnightblue"
        android:textSize="45sp"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textColor="@color/darkslategray"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/virellayout"
        android:background="@color/midnightblue"
        android:weightSum="1"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/verifierinfolbl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/vill1"
            android:layout_marginTop="10dp"
            android:weightSum="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="UserID"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:textSize="17sp"
                android:id="@+id/viidlbl"
                android:textStyle="bold"
                android:textColor="@color/aliceblue"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight=".91" />
            <TextView
                android:layout_width="188dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:textStyle="bold"
                android:textSize="17sp"
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textColor="@color/aliceblue"
                android:id="@+id/viidtext"
                android:layout_above="@+id/vinametxt"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/vill2"
            android:layout_below="@+id/vill1"
            android:weightSum="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Name"
                android:textAlignment="center"
                android:textSize="17sp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:id="@+id/vinamelbl"
                android:textColor="@color/aliceblue"
                android:layout_below="@+id/vill1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="37dp"
                android:layout_weight="0.91" />
            <TextView
                android:layout_width="188dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textColor="@color/aliceblue"
                android:id="@+id/vinametxt"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.1"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/vill3"
            android:layout_below="@+id/vill2"
            android:weightSum="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Phno"
                android:textAlignment="center"
                android:textSize="17sp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:id="@+id/viphnolbl"
                android:textColor="@color/aliceblue"
                android:layout_below="@+id/vill2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="37dp"
                android:layout_weight="0.91" />
            <TextView
                android:layout_width="188dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textColor="@color/aliceblue"
                android:id="@+id/viphnotxt"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:weightSum="1"
            android:id="@+id/vill4"
            android:layout_below="@+id/vill3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Place"
                android:textSize="17sp"
                android:fontFamily="serif"
                android:textAlignment="center"
                android:id="@+id/vilocalitylbl"
                android:textColor="@color/aliceblue"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1.00" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:textStyle="bold"
                android:textSize="17sp"
                android:fontFamily="serif"
                android:textColor="@color/aliceblue"
                android:id="@+id/viplacetxt"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.1"
                android:layout_alignTop="@+id/vill5"
                android:textAlignment="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/vill5" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:weightSum="1"
            android:id="@+id/vill5"
            android:layout_below="@+id/vill4"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Status"
                android:textSize="17sp"
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/vistatuslbl"
                android:textColor="@color/aliceblue"
                android:layout_below="@+id/vilinearLayout3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1.0" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text=""
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="serif"
                android:background="@color/transparent"
                android:textColor="@color/aliceblue"
                android:textAlignment="center"
                android:id="@+id/vistatustxt"
                android:layout_below="@+id/vilinearLayout3"
                android:layout_toRightOf="@+id/vistatuslbl"
                android:layout_toEndOf="@+id/vistatuslbl"
                android:layout_weight="0.19"
                android:layout_gravity="center_horizontal">
                </EditText>
        </LinearLayout>
</RelativeLayout>
    <Button
        android:shadowColor="@color/seashell"
        android:shadowRadius="5"
        android:shadowDy="3"
        android:shadowDx="2"
        android:padding="10dip"
        android:background="@drawable/buttoncustomize"
        android:fontFamily="serif"
        android:clickable="true"
        android:id="@+id/btnupdate"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkslategray"
        android:text="Update"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_weight="2.03"
        android:layout_below="@+id/virellayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />
        <TextView
            android:id="@+id/namelblvishverifierinfoact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verifier"
            android:textIsSelectable="false"
            android:background="@color/black"
            android:textColor="@color/teal"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
