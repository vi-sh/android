<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@mipmap/dreams3">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">


    <test.example.com.verifiersvalidator.TitanicTextView
        android:layout_width="wrap_content"
        android:fontFamily="serif"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginlbl"
        android:background="@color/midnightblue"
        android:textSize="45sp"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textColor="@color/darkslategray"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:padding="10dip"
        android:fontFamily="serif"
        android:background="@drawable/txtboxstyle"
        android:textColor="@android:color/black"
        android:id="@+id/usernametxtbox"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:hint="* Username"
        android:textColorHint="@color/gray"
        android:imeOptions="actionUnspecified"
        android:imeActionId="@+id/login"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/loginlbl"
        android:layout_centerHorizontal="true" />

    <EditText
        android:padding="10dip"
        android:fontFamily="serif"
        android:background="@drawable/txtboxstyle"
        android:textColor="@android:color/black"
        android:id="@+id/passwordtxtbox"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:hint="* password"
        android:textColorHint="@color/gray"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_gravity="center"
        android:layout_below="@+id/usernametxtbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:fontFamily="serif"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="14dp"
        android:text="* fields are mandatory"
        android:textColor="@color/darkslategray"
        android:id="@+id/label1"
        android:gravity="center_vertical"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/passwordtxtbox"
        android:layout_alignLeft="@+id/passwordtxtbox"
        android:layout_alignStart="@+id/passwordtxtbox" />

    <Button
        android:shadowColor="@color/seashell"
        android:shadowRadius="5"
        android:shadowDy="3"
        android:shadowDx="2"
        android:padding="10dip"
        android:background="@drawable/buttoncustomize"
        android:fontFamily="serif"
        android:clickable="true"
        android:id="@+id/btnsubmit"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkslategray"
        android:text="Submit"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_weight="2.03"
        android:layout_below="@+id/label1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />


    <test.example.com.verifiersvalidator.TitanicTextView
        android:id="@+id/namelbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verifier"
        android:textIsSelectable="false"
        android:background="@color/black"
        android:textColor="@color/teal"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</RelativeLayout>



