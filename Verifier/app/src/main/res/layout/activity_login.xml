<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@mipmap/sp1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:fontFamily="cursive"
        android:shadowColor="@color/black"
        android:shadowRadius="4"
        android:shadowDx="3"
        android:shadowDy="2"
        android:background="@color/darkgray"
        android:id="@+id/label2"
        android:textSize="70sp"
        android:textIsSelectable="false"
        android:textColor="@color/black"
        android:typeface="monospace"
        android:layout_gravity="left"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:fontFamily="cursive"
        android:background="@color/lightslategray"
        android:textColor="@android:color/black"
        android:id="@+id/txtboxemail"
        android:layout_width="270dp"
        android:layout_height="47dp"
        android:hint="*Email"
        android:textColorHint="@color/paachi"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_gravity="center"
        android:layout_below="@+id/label2"
        android:layout_alignLeft="@+id/label1"
        android:layout_alignStart="@+id/label1" />

    <EditText
        android:fontFamily="cursive"
        android:background="@color/lightslategray"
        android:textColor="@android:color/black"
        android:id="@+id/txtboxpassword"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:hint="*password"
        android:textColorHint="@color/paachi"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/txtboxemail"
        android:layout_alignStart="@+id/txtboxemail" />

    <TextView
        android:fontFamily="cursive"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="* fields are mandatory"
        android:textColor="@android:color/white"
        android:textColorHighlight="@color/colorPrimary"
        android:id="@+id/label1"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/txtboxpassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:clickable="true"
        android:id="@+id/btnsignin"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparentblack"
        android:textColor="@color/silver"
        android:text="Sign in"
        android:textSize="20dp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_weight="2.03"
        android:onClick="anotheractivity"
        android:layout_below="@+id/label1"
        android:layout_alignLeft="@+id/label1"
        android:shadowRadius="3"
        android:shadowColor="@color/gray"
        android:shadowDx="3"
        android:shadowDy="2"
        android:layout_alignStart="@+id/label1"/>

</RelativeLayout>