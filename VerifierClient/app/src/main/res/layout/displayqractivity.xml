<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dreams1"
    tools:context="test.example.com.verifierclient.DisplayQrActivity">

    <test.example.com.verifierclient.TitanicTextView
        android:layout_width="wrap_content"
        android:fontFamily="serif"
        android:layout_height="wrap_content"
        android:text=" Qr-code"
        android:id="@+id/userqrlbl"
        android:background="@color/midnightblue"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textColor="@color/darkslategray"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:id="@+id/showqrimg"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/userqrlbl"
        android:layout_centerHorizontal="true" />

    <test.example.com.verifierclient.TitanicTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Back to Info"
        android:textColor="@color/darkslategray"
        android:fontFamily="serif"
        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/backtoinfo"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/showqrimg"
        android:layout_centerHorizontal="true" />



    <test.example.com.verifierclient.TitanicTextView
        android:id="@+id/namelblvishdisplayuserinfoact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verifier client"
        android:textIsSelectable="false"
        android:background="@color/black"
        android:textColor="@color/teal"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
