<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dreams3"
    tools:context="test.example.com.verifierclient.QrcodedownloadActivity">

    <test.example.com.verifierclient.TitanicTextView
        android:layout_width="wrap_content"
        android:fontFamily="serif"
        android:layout_height="wrap_content"
        android:text="Download"
        android:id="@+id/downloadlbl"
        android:background="@color/midnightblue"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textColor="@color/darkslategray"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/qrcodeimg"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/downloadlbl"
        android:layout_centerHorizontal="true" />

    <Button
        android:shadowColor="@color/seashell"
        android:shadowRadius="5"
        android:shadowDy="3"
        android:shadowDx="2"
        android:padding="10dip"
        android:background="@drawable/buttoncustomize"
        android:fontFamily="serif"
        android:clickable="true"
        android:id="@+id/getqrbtn"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkslategray"
        android:text="Get QR"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_weight="2.03"
        android:layout_below="@+id/qrcodeimg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

    <test.example.com.verifierclient.TitanicTextView
        android:id="@+id/namelblvishqrdownloadact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verifier client"
        android:textIsSelectable="false"
        android:background="@color/black"
        android:textColor="@color/teal"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
