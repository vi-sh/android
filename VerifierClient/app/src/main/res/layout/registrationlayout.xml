<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dreams3"
    tools:context="test.example.com.verifierclient.RegistrationActivity">

    <test.example.com.verifierclient.TitanicTextView
        android:layout_width="wrap_content"
        android:fontFamily="serif"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:id="@+id/reglbl"
        android:background="@color/midnightblue"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textColor="@color/darkslategray"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/reglbl"
        android:layout_marginTop="30dp">

    <EditText
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:padding="6dip"
        android:fontFamily="serif"
        android:background="@drawable/txtboxstyle"
        android:textColor="@android:color/black"
        android:id="@+id/reguidtxt"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:hint="* Username"
        android:textColorHint="@color/darkcyan"
        android:inputType="textAutoComplete"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:textIsSelectable="false"
        android:maxLength="10"/>

    <EditText
        android:padding="6dip"
        android:layout_marginBottom="15dp"
        android:fontFamily="serif"
        android:background="@drawable/txtboxstyle"
        android:textColor="@android:color/black"
        android:id="@+id/regnametxt"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:hint="* Name"
        android:textColorHint="@color/darkcyan"
        android:inputType="text"
        android:maxLength="15"
        android:layout_below="@+id/reguidtxt"
        android:layout_alignLeft="@+id/reguidtxt"
        android:layout_alignStart="@+id/reguidtxt" />

    <EditText
        android:padding="6dip"
        android:layout_marginBottom="15dp"
        android:fontFamily="serif"
        android:background="@drawable/txtboxstyle"
        android:textColor="@android:color/black"
        android:id="@+id/regpasswordtxt"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:hint="* Password"
        android:textColorHint="@color/darkcyan"
        android:inputType="textPassword"
        android:maxLength="10"
        android:layout_below="@+id/regnametxt"
        android:layout_alignLeft="@+id/regnametxt"
        android:layout_alignStart="@+id/regnametxt"
        android:password="true" />

        <EditText
            android:padding="6dip"
            android:layout_marginBottom="15dp"
            android:fontFamily="serif"
            android:background="@drawable/txtboxstyle"
            android:textColor="@android:color/black"
            android:id="@+id/reregpasswordtxt"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:hint="* retype Password"
            android:password="true"
            android:textColorHint="@color/darkcyan"
            android:inputType="textPassword"
            android:maxLength="10"
            android:layout_below="@+id/regpasswordtxt"
            android:layout_alignLeft="@+id/regpasswordtxt"
            android:layout_alignStart="@+id/regpasswordtxt"/>

    <EditText
        android:padding="6dip"
        android:fontFamily="serif"
        android:layout_marginBottom="15dp"
        android:background="@drawable/txtboxstyle"
        android:textColor="@android:color/black"
        android:id="@+id/regphnotxt"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:hint="* Phone number"
        android:textColorHint="@color/darkcyan"
        android:inputType="number"
        android:maxLength="15"
        android:layout_below="@+id/reregpasswordtxt"
        android:layout_alignLeft="@+id/regpasswordtxt"
        android:layout_alignStart="@+id/regpasswordtxt" />

    <EditText
        android:padding="6dip"
        android:fontFamily="serif"
        android:layout_marginBottom="15dp"
        android:background="@drawable/txtboxstyle"
        android:textColor="@android:color/black"
        android:id="@+id/reglocaltxt"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:hint="* Locality"
        android:textColorHint="@color/darkcyan"
        android:inputType="text"
        android:maxLength="15"
        android:layout_below="@+id/regphnotxt"
        android:layout_centerHorizontal="true" />

    <EditText
        android:padding="6dip"
        android:fontFamily="serif"
        android:layout_marginBottom="15dp"
        android:background="@drawable/txtboxstyle"
        android:textColor="@android:color/black"
        android:id="@+id/regcomptxt"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:hint="* Company"
        android:textColorHint="@color/darkcyan"
        android:maxLength="15"
        android:inputType="textCapCharacters|text"
        android:layout_below="@+id/reglocaltxt"
        android:layout_alignLeft="@+id/reglocaltxt"
        android:layout_alignStart="@+id/reglocaltxt" />

        </RelativeLayout>

    <Button
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="10dp"
        android:shadowColor="@color/seashell"
        android:shadowRadius="5"
        android:shadowDy="3"
        android:shadowDx="2"
        android:padding="10dip"
        android:background="@drawable/buttoncustomize"
        android:fontFamily="serif"
        android:clickable="true"
        android:id="@+id/regbtnsubmit"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkslategray"
        android:text="Submit"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_weight="2.03"
        android:layout_centerHorizontal="true" />

    <test.example.com.verifierclient.TitanicTextView
        android:id="@+id/namelblvishregact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verifier client"
        android:textIsSelectable="false"
        android:background="@color/black"
        android:textColor="@color/teal"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <test.example.com.verifierclient.TitanicTextView
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textColor="@color/darkslategray"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Already a Member ?"
        android:fontFamily="serif"
        android:textSize="18sp"
        android:id="@+id/memberlbl"
        android:layout_below="@+id/regbtnsubmit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>
